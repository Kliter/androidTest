<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
        
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/appbar_layout"
            android:elevation="4dp">

                <include layout="@layout/snippet_toolbar"/>

        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomNavigationView"
            android:layout_below="@+id/appbar_layout">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/linearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                                <Button
                                    android:id="@+id/btnListViewTest"
                                    style="Widget.TestApp.Button"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:text="@string/ListViewTest" />

                                <Button
                                    android:id="@+id/btnPrefectureListView"
                                    style="Widget.TestApp.Button"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:text="@string/PrefectureListView" />

                                <Button
                                    android:id="@+id/btnRecyclerViewTest"
                                    style="Widget.TestApp.Button"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:text="@string/RecyclerViewTest" />

                                <Button
                                    android:id="@+id/btnPokeCardList"
                                    style="Widget.TestApp.Button"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:text="@string/PokeCardList" />

                                <Button
                                    android:id="@+id/btnMaterialSearchViewTest"
                                    style="@style/Widget.TestApp.Button"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:text="@string/MaterialViewTest" />

                                <Button
                                    android:id="@+id/btnTextInputTest"
                                    style="@style/Widget.TestApp.Button"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:text="@string/TextInputTest" />

                                <Button
                                    android:id="@+id/btnVolleyTest"
                                    style="@style/Widget.TestApp.Button"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:text="@string/VolleyTest" />

                                <Button
                                    android:id="@+id/btnVolleyPractice"
                                    style="@style/Widget.TestApp.Button"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:text="@string/VolleyPractice" />

                                <Button
                                    android:id="@+id/btnSQLiteTest"
                                    style="@style/Widget.TestApp.Button"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:text="@string/SQLiteTest" />

                                <Button
                                    android:id="@+id/btnDialogsTest"
                                    style="@style/Widget.TestApp.Button"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:text="@string/DialogsTest" />

                                <Button
                                    android:id="@+id/btnCustomDialogsTest"
                                    style="@style/Widget.TestApp.Button"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:text="@string/CustomDialogTest" />

                                <Button
                                    android:id="@+id/btnGlideTest"
                                    style="@style/Widget.TestApp.Button"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:text="@string/GlideTest" />

                        </LinearLayout>
                </ScrollView>
        </RelativeLayout>

        <android.support.design.widget.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/bottomNavigationView"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            app:menu="@menu/menu_bottom"
            style="@style/TextAppearance.TestApp.BottomNavigation"
            app:itemIconTint="@drawable/bottom_navigation_item_state"
            app:itemTextColor="@drawable/bottom_navigation_item_state"/>

</RelativeLayout>