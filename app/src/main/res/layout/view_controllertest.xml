<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/leftArrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@color/black"/>
    <ImageView
        android:id="@+id/topArrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/leftArrow"
        android:layout_above="@+id/leftArrow"
        android:background="@color/black"/>
    <ImageView
        android:id="@+id/bottomArrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/leftArrow"
        android:layout_below="@+id/leftArrow"
        android:background="@color/black"/>
    <ImageView
        android:id="@+id/rightArrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/topArrow"
        android:layout_below="@+id/topArrow"
        android:background="@color/black"/>

    <ImageView
        android:id="@+id/bButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="25dp"
        android:background="@color/black"/>
    <ImageView
        android:id="@+id/aButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toLeftOf="@+id/bButton"
        android:layout_centerVertical="true"
        android:layout_marginRight="50dp"
        android:background="@color/black"/>
</merge>