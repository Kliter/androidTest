<resources>

    <!-- Base application theme. -->
    <style name="Theme.AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="Widget.TestApp.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/Theme.AppTheme</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.TestApp.Toolbar</item>
    </style>

    <style name="TextAppearance.TestApp.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TextAppearance.TestApp.Roboto" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:color">@color/white</item>
    </style>

    <style name="Widget.TestApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.TestApp.BottomNavigation" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16dp</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
</resources>
